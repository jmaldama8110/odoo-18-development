<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="loan_manager_product_cycle_view_form" model="ir.ui.view">
        <field name="name">loan_manager.product.cycle.view.form</field>
        <field name="model">loan_manager.product_cycle</field>
        <field name="arch" type="xml">
            <form string="Product cycle">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="cycle_number"/>
                        </group>
                        <group>
                            <field name="amount_limit"/>
                        </group>

                    </group>

                </sheet>
            </form>

        </field>
    </record>

</odoo>